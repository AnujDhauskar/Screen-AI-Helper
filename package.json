{
  "name": "screen-ai-helper",
  "displayName": "screen-ai-helper",
  "description": "AI tool to explain coding errors on screen without context switching",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:screenAiHelper.explainCurrentError"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "screenAiHelper.explainCurrentError",
        "title": "Screen AI Helper: Explain Current Error"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "openai": "^6.9.1"
  }
}
